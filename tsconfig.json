{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "baseUrl": "./",
    "outDir": "build",
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/public/"]
}
